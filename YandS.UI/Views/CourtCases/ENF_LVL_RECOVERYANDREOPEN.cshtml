@model YandS.UI.Models.ToBeRegisterVM
<script type="text/javascript">
    $(document).ready(function () {
        $('.select2bs4').select2({
            theme: 'bootstrap4'
        });

        $('.datepicker').datepicker({
            format: "dd/mm/yyyy",
            todayBtn: "linked",
            clearBtn: true,
            autoclose: true,
            orientation: "bottom auto"
        });
    });
</script>
<div class="row">
    <div class="col-sm-4">
        <div class="form-group">
            @Html.LabelFor(model => model.CauseOfRecoveryId)
            @Html.DropDownList("CauseOfRecoveryId", null, htmlAttributes: new { @class = "form-control select2bs4" })
        </div>
    </div>
    <div class="col-sm-4">
        <div class="form-group AppHidden">
            @Html.LabelFor(model => model.DateOfInstruction)
            @Html.EditorFor(model => model.DateOfInstruction, new { htmlAttributes = new { @class = "form-control datepicker" } })
        </div>
    </div>
    <div class="col-sm-4">
        
    </div>
</div>