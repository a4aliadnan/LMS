
<script type="text/javascript">
    var CreateMasterTableDetailForPayToURL = '@Url.Action("CreateMasterTableDetailForPayTo", "CommonTask", new { area = string.Empty })';
    var LoadCaseLevelURL = '@Url.Action("LoadCaseLevelByCaseId", "CommonTask", new { area = string.Empty })';
    var GetPayVoucherCreatedListURL = '@Url.Action("GetPayVoucherCreatedList", "CommonTask", new { area = string.Empty })';
    var LoadPayForURL = '@Url.Action("LoadPayFor", "CommonTask", new { area = string.Empty })';
    var GetCaseDetailSRURL = '@Url.Action("GetCaseDetailByCaseId", "CommonTask", new { area = string.Empty })';
    var CreatePayVoucherURL = '@Url.Action("PayVoucherCreate", "SessionRoll", new { area = string.Empty })';
    var PayForRemarks = "";
    var IsValidOfficeFileNo = true;
    var PVDetailTable;

    function dateChanged(ev) {
        $(this).datepicker('hide');
        if ($("#DEF_DateOfContact").val() !== "") {
            $(".clsDateOfContactView").removeClass("AppHidden");
            $('textarea').autoResize();
        }
        else {
            $(".clsDateOfContactView").removeClass("AppHidden").addClass("AppHidden");
        }
    }
    function CalcTotal() {
        var p_Amt = $("#Amount").val() == "" ? 0 : parseFloat($("#Amount").val());
        var p_VarAmt = $("#VatAmount").val() == "" ? 0 : parseFloat($("#VatAmount").val());

        var p_TtlAmt = p_Amt + p_VarAmt;

        $("#TotalAmount").val(p_TtlAmt);

    }

    $(document).ready(function () {
        console.log("Session Common Task");
        var AllowedUsers = ["1", "2", "3", "4", "5", "6", "9"];

        if (AllowedUsers.indexOf($("#hidUserName").val()) == -1) {
            $(".AddNewMaster").prop("disabled", true);
        }

        $('.select2bs4').select2({ theme: 'bootstrap4' });
        $('.datepicker').datepicker({
            format: "dd/mm/yyyy",
            todayBtn: "linked",
            clearBtn: true,
            autoclose: true,
            orientation: "bottom auto"
        });
        bsCustomFileInput.init();
        var DIV_TO_HIDE = [
            "#FollowDIV",
            "#ForMemoDIV",
            "#CourtFollowDIV",
            "#NotesDIV",
            "#AddressDIV",
            "#PVDIV",
            ".clsLawerFollow",
            ".clsDateOfContactView"
        ];

        $('.btn-Detail').on("click", function () {

            if ($(this).hasClass("AppOpen")) {
                $("#" + this.id.split('_')[1]).removeClass("AppHidden").addClass("AppHidden");
                $(this).removeClass("AppOpen");

                switch (this.id.split('_')[1]) {
                    case "FollowDIV":
                        $("#Update_Follow").val("N");
                        $("#ShowFollowup").val("False");
                        break;
                    case "ForMemoDIV":
                        $("#Update_Suspend").val("N");
                        $("#ShowSuspend").val("False");
                        break;
                    case "CourtFollowDIV":
                        $("#Update_CourtFollow").val("N");
                        break;
                    case "AddressDIV":
                        $("#Update_Addreass").val("N");
                        break;
                    case "PVDIV":
                        $("#Update_PV").val("N");
                        break;
                }

            }
            else {
                $("#" + this.id.split('_')[1]).removeClass("AppHidden");
                $(this).addClass("AppOpen");

                switch (this.id.split('_')[1]) {
                    case "FollowDIV":
                        $("#Update_Follow").val("Y");
                        $("#ShowFollowup").val("True");
                        break;
                    case "ForMemoDIV":
                        $("#Update_Suspend").val("Y");
                        $("#ShowSuspend").val("True");
                        break;
                    case "CourtFollowDIV":
                        $("#Update_CourtFollow").val("Y");
                        break;
                    case "AddressDIV":
                        $("#Update_Addreass").val("Y");
                        break;
                    case "PVDIV":
                        $("#Update_PV").val("Y");
                        break;
                }
            }

            $('textarea').autoResize();
        });
                

        var i;
        for (i = 0; i < DIV_TO_HIDE.length; ++i) {
            $(DIV_TO_HIDE[i]).removeClass("AppHidden").addClass("AppHidden");
        }
        
                
        ShowDIV();

        $('#SessionNote_Remark').bind('input propertychange', function () {
            ShowSessionNoteBanner();
        });


        $('#btnNOTESClear').on("click", function () {
            $("#DIV_NOTES_BANNER").removeClass("AppHidden").addClass("AppHidden");
            $("#spnNotesBanner").text("");
            $("#SessionNote_Remark").val("");
            $('textarea').autoResize();
        });
        
        $('#CourtFollow').on("change", function () {
            $(".clsLawerFollow").removeClass("AppHidden").addClass("AppHidden");

            if ($('#CourtFollow').val() == "1") {
                $(".clsLawerFollow").removeClass("AppHidden");
                $('textarea').autoResize();
            }
        });

        $("#DEF_DateOfContact").datepicker({
            todayBtn: 1,
            autoclose: true,
            format: "dd/mm/yyyy",
        }).change(dateChanged);

        /*Pay Voucher*/
        $("#Amount").val("0");
        var IsDigitmask = new RegExp(/^\d*\.?(?:\d{1,3})?$/);
        $("#Amount").regexMask(IsDigitmask);
        $("#VatAmount").regexMask(IsDigitmask);

        $('.txtCalc').on("blur", function () { CalcTotal(); });


        if (typeof PVDetailTable != 'undefined')
            PVDetailTable.destroy();

        PVDetailTable = $('#tblPVDetail').DataTable({
            lengthChange: false,
            "dom": 't',
            ajax: {
                url: GetPayVoucherCreatedListURL,
                "dataSrc": "",
                type: 'POST',
                data: function (d) {
                    d.P_OfficeFileNo = $("#OfficeFileNo").val();
                }
            },
            "columns": [
                { data: 'CaseLevel' },
                { data: 'PaymentHeadName' },
                { data: 'PaymentToName' },
                { data: 'TotalAmount' },
                { data: 'W_D_Date' }
            ],
            //"columnDefs": [{ 'orderable': false, "targets": "_all" }],
            "order": [],
            "columnDefs": [{
                "targets": [0, 1, 2, 3, 4],
                "orderable": false
            }]
        });

        /*END Pay Voucher*/
    });
</script>
